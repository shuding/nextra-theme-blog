{
  "name": "nextra-theme-blog",
  "version": "0.1.0",
  "description": "A Nextra theme for blogs.",
  "main": "index.js",
  "repository": "https://github.com/shuding/nextra-theme-blog.git",
  "author": "Shu Ding <g@shud.in>",
  "license": "MIT",
  "files": [
    "dist/*",
    "index.js",
    "tag-name.js",
    "style.css"
  ],
  "scripts": {
    "build": "yarn run build:clean && yarn run build:tailwind && yarn run build:layout",
    "build:clean": "rm -rf dist",
    "build:tailwind": "tailwindcss build src/style.css -o style.css -c tailwind.config.js",
    "build:layout": "microbundle src/*.js -f cjs -o dist --no-sourcemap --jsx React.createElement --target node"
  },
  "dependencies": {
    "@mdx-js/react": "^1.6.18",
    "@sindresorhus/slugify": "^1.1.0",
    "@tailwindcss/typography": "^0.2.0",
    "prism-react-renderer": "^1.1.1",
    "tailwindcss": "^1.8.10"
  },
  "peerDependencies": {
    "next": "^9.5.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "microbundle": "^0.12.3"
  }
}
